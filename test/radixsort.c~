#include "radixsort.h"
#include <sys/time.h>
#include <stdlib.h>
#include <inttypes.h>
//#include <stdio.h>

double wtime() {

    struct timeval t;
    gettimeofday(&t, NULL);
    return (double)t.tv_sec + (double)t.tv_usec * 1E-6;
}



int getrand(int min, int max) {
    return (double)rand() / (RAND_MAX + 1.0) * (max - min) + min;
}
int getMax(int *mas, int n) {

    int i;
    int max = 0;

    for(i = 0; i < n; i++){
        if(mas[i] > max)
            max = mas[i];
    }
    
    return max;
}
void countSort(int *mas, int n, int exp) {
    
    int i, count[10] = {0};
    int output[n];
    
    for (i = 0; i < n; i++) {
        count[ (mas[i] / exp) % 10 ]++;
    }
 
    for (i = 1; i < 10; i++) {
        count[i] += count[i - 1];
    }
    
    for (i = n - 1; i >= 0; i--) {
        output[count[ (mas[i] / exp) % 10 ] - 1] = mas[i];
        count[ (mas[i] / exp) % 10 ]--;
    } 
 

    for (i = 0; i < n; i++) {
        mas[i] = output[i];
    }

}

void radixsort(int *mas, int n) {

    int max, exp;
    max = getMax(mas, n);
    
    for(exp = 1; max / exp > 0; exp*=10) {
        countSort(mas, n, exp);   	
    }	
}
  
